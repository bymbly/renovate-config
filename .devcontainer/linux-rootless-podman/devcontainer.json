// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "linux-rootless-podman",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "remoteUser": "bymbly",
  "workspaceMount": "",
  "runArgs": [
    "--security-opt",
    "label=disable",
    "--security-opt",
    "seccomp=unconfined",
    "--network=host",
    "--userns=keep-id",
    "--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}:Z"
  ],
  "postCreateCommand": "asdf install",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmalehorn.vscode-fish",
        "christian-kohler.path-intellisense",
        "davidanson.vscode-markdownlint",
        "donjayamanne.githistory",
        "editorconfig.editorconfig",
        "foxundermoon.shell-format",
        "github.codespaces",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "mhutchie.git-graph",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        // editor fonts & ligatures
        "editor.fontFamily": "'Symbols Nerd Font Mono','Fira Code','Cascadia Code','JetBrains Mono','Droid Sans Mono','monospace',monospace",
        "editor.fontLigatures": true,

        // terminal fonts
        "terminal.integrated.fontFamily": "'Symbols Nerd Font Mono','Fira Code','Cascadia Code','JetBrains Mono','monospace'",

        // terminal behavior
        "terminal.integrated.sendKeybindingsToShell": true,

        // save behavior
        "files.autoSave": "afterDelay",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },

        // formatting / whitespace
        "editor.tabSize": 2,
        "editor.rulers": [
          { "column": 100, "color": "#80808022" },
          { "column": 120, "color": "#80808055" }
        ],
        "editor.renderWhitespace": "selection",
        "editor.formatOnPaste": true,
        "editor.linkedEditing": true,

        // git / scm
        "git.confirmSync": true,
        "git.autofetch": true,

        // copilot
        "github.copilot.nextEditSuggestions.enabled": true
      }
    }
  }
}
