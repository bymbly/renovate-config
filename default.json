{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with Bymbly's repos",
  "extends": ["config:best-practices"],
  "rangeStrategy": "pin",
  "automergeType": "branch",
  "semanticCommits": "enabled",
  "commitBodyTable": true,

  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },

  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "description": "Automerge pin updates",
      "matchUpdateTypes": ["pin", "pinDigest"],
      "automerge": true
    },
    {
      "description": "Only allow Fedora <= 42 - otherwise renovate tries to update to rawhide",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fedora", "registry.fedoraproject.org/fedora"],
      "allowedVersions": "<=42"
    },
    {
      "description": "Batch Fedora digest bumps weekly to cut down on CI runs",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["fedora", "registry.fedoraproject.org/fedora"],
      "matchUpdateTypes": ["digest"],
      "extends": ["schedule:weekly"]
    },
    {
      "description": "One week stability period for npm packages",
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "One week stability period for hex (Erlang/Elixir/Gleam) packages",
      "matchDatasources": ["hex"],
      "minimumReleaseAge": "7 days"
    }
  ]
}
